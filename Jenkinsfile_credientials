pipeline {
    agent any
    
    // environment {
    //     DATABASE_CRED = credentials('database_cred')
    // }
    
    stages {
        stage('Hello') {
            steps {
                sh 'echo Hello World'
            }
        }

        stage('testing and linting'){
            stages {
                stage('testing'){
                    steps {
                        echo "testing............"
                    }
                }
                stage('linting'){
                    steps {
                        echo "linting............"
                    }
                }
            }
        }

        stage('Connection to database test'){
            steps {
                withCredentials([usernamePassword(credentialsId: 'database_cred', usernameVariable: 'myusername', passwordVariable:'mypassword')]){
                    echo "connection to database with these creds: username ${myusername}, password: ${mypassword}" 

                }
            }
        }
    }
}